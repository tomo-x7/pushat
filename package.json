{
	"name": "pushat",
	"version": "1.0.0",
	"private": true,
	"license": "MIT",
	"packageManager": "pnpm@10.17.1",
	"scripts": {
		"check": "biome check --write",
		"web": "pnpm --filter ./web",
		"main": "pnpm --filter ./main",
		"lib": "pnpm --filter ./lib",
		"gen": "pnpm main run gen && pnpm lib run gen && pnpm web run gen",
		"deploy": "wrangler deploy --minify",
		"dev": "wrangler dev",
		"cf-typegen": "wrangler types ./main/src/worker.d.ts --env-interface CloudflareBindings",
		"build": "pnpm -r --sort run build"
	},
	"engines": {
		"pnpm": ">=10.17.1",
		"node": ">=22.12"
	},
	"pnpm": {
		"executionEnv": {
			"nodeVersion": "22.19.0"
		},
		"patchedDependencies": {
			"@atproto/lex-cli": "patches/@atproto__lex-cli.patch"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.3",
		"wrangler": "^4.38.0"
	}
}
