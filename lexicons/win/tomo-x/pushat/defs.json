{
	"lexicon": 1,
	"id": "win.tomo-x.pushat.defs",
	"defs": {
		"deviceList": {
			"type": "array",
			"items": {
				"type": "ref",
				"ref": "#deviceListItem"
			}
		},
		"deviceListItem": {
			"type": "object",
			"required": ["name", "id", "current"],
			"properties": {
				"name": {
					"type": "string",
					"maxGraphemes": 30,
					"maxLength": 300
				},
				"id": {
					"type": "string",
					"format": "tid"
				},
				"current": {
					"type": "boolean",
					"default": false
				}
			}
		},
		"notifyBody": {
			"type": "object",
			"required": ["title", "body"],
			"properties": {
				"title": {
					"type": "string",
					"description": "Title text of the notification."
				},
				"body": {
					"type": "string",
					"description": "Body text of the notification."
				},
				"icon": {
					"type": "string",
					"format": "uri",
					"description": "The URI of the icon displayed in the notification."
				},
				"link": {
					"type": "string",
					"format": "uri",
					"description": "Experimental â€” do not use. The URI to open when the notification is clicked."
				}
			}
		}
	}
}
